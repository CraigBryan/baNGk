<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/tli_padding_sides"
    android:paddingRight="@dimen/tli_padding_sides"
    android:paddingTop="@dimen/tli_padding_top_bot"
    android:paddingBottom="@dimen/tli_padding_top_bot">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:text="May 10, 1988"
            android:id="@+id/tli_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:text="#472"
            android:id="@+id/tli_trans_num"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$237.28"
            android:id="@+id/tli_value_label"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:text="Mucho Burrito Elgin"
            android:id="@+id/tli_place_label"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:singleLine="false"
            android:layout_above="@+id/tli_value_label"
            android:layout_gravity="right"/>

    </LinearLayout>

</RelativeLayout>