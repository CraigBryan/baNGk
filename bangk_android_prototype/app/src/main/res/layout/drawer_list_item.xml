<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_list_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/icon_dimension"
        android:layout_height="@dimen/icon_dimension"
        android:id="@+id/nav_drawer_icon"
        android:src="@mipmap/questionmark"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/icon_margin_left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Icon Label"
        android:layout_gravity="center_vertical"
        android:elegantTextHeight="false"
        android:id="@+id/nav_drawer_label"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/nav_label_left_margin"/>
</LinearLayout>